{
  "devDependencies": {
    "parcel": "2.9.2",
    "@parcel/transformer-less": "2.9.2",
    "process": "0.11.10"
  },
  "dependencies": {
    "npm-run-all": "4.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "6.0.0-rc.3"
  },
  "scripts": {
    "preinstall": "mkdir node_modules ; xattr -w com.dropbox.ignored 1 node_modules",

    "dev" : "run-s prepare:dist dev:watch",
    "build" : "run-s clean:* prepare:dist production:build",

    "dev:watch": "yarn parcel --target web",

    "production:build": "yarn parcel build --target web --no-cache --no-source-maps",


    "clean:dist": "rm -Rf dist",
    "clean:cache": "rm -Rf .parcel-cache",

    "prepare:dist" : "mkdir dist ; xattr -w com.dropbox.ignored 1 dist"
  },
  "targets": {
    "web": {
      "source": "src/html/index.html",
      "distDir": "dist",
      "publicUrl" : ".",
      "scopeHoist": false,
      "includeNodeModules": {
        "storybook": false
      },
      "context": "browser"
    }
  }
}
